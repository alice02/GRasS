<h1> Measurement ID: <%= @measurement.id %> </h1>


<ul class="nav nav-tabs">
  <li class="active"><a href="#Gnuplot" data-toggle="tab">Gnuplot Graph</a></li>
  <li><a href="#3DGraph" data-toggle="tab">3D Graph</a></li>
  <li><a href="#Data" data-toggle="tab">Data</a></li>
</ul>


<div class="tab-content">
  <div class="tab-pane active" id="3DGraph">
    <!-- SurfacePlot goes here...
    <div id='surfacePlotDiv' align="left">
    </div>        
    --->
  </div>

  <div class="tab-pane active" id="Gnuplot">
    <%= image_tag "/images/graph-#{@measurement.id}.png" %>
  </div>

  <div class="tab-pane" id="Data">
    <% if @measurement.records.any? %>
    <table class="table table-striped table-bordered table-hover">
      <thead>
     	  <tr><th>ID</th><th>Depth</th><th>x</th><th>y</th></tr>
      </thead>
      <tbody>
	      <% @measurement.records.each do |r| %>
	      <tr>
        <td><%= r.id %></td>
	      <td><%= r.depth %></td>
	      <td><%= r.x %></td>
	      <td><%= r.y %></td>
	      </tr>
	      <% end %>
      </tbody>
    </table>
    <% else %>
      <h4>No data yet.</h4>
    <% end %>
  </div>
</div>
