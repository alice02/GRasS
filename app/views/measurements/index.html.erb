<h1>計測されたデータ</h1>

	<table class="table table-striped table-bordered table-hover">
		<thead>
			<tr><th>ID</th><th>Comment</th><th>Create Time</th><th>Action</th></tr>
		</thead>
		<tbody>
		<% @measurements.each do |m| %>
		<tr><td width="50" align="center"><%= m.id %></td>
			<td><%= m.comment %></td>
			<td width="250"><%= m.created_at %></td>
			<td width="180" align="center">
				<%= link_to 'Show', measurement_path(m.id), class: "btn btn-info" %>　
				<%= link_to 'Destroy', m, :data => {:confirm => "削除してもよろしいですか？"}, :class => "btn btn-danger", :method => :delete  %>
			</td>
		</tr>
		<% end %>
		</tbody>
	</table>

<div class="modal fade" id="myModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">確認</h4>
			</div>
			<div class="modal-body">
				データを削除します。よろしいですか？
			</div>
			<div class="modal-footer">
				<%= link_to 'Cancel', '#', class: "btn btn-default", :data => {:dismiss => "modal"} %>
			</div>
		</div>
	</div>
</div>